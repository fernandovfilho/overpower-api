{
  "name": "overpower-api",
  "version": "1.0.0",
  "description": "NodeJS API to pratice SOLID, TDD with Typescript and more",
  "main": "index.js",
  "scripts": {
    "dev:debug": "ts-node-dev --transpile-only --respawn --inspect=7001 --project tsconfig.json src/server.ts",
    "dev": "ts-node-dev --transpile-only --respawn --project tsconfig.json src/server.ts",
    "build": "npx tsc --build",
    "start": "node dist/server.js",
    "test": "jest --coverage && node coverage-verifier.js",
    "test:dev": "jest --watch",
    "lint": "eslint . --ext .ts",
    "lint:fix": "prettier --config .prettierrc 'src/**/*.ts' --write"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fernandovfilho/overpower-api.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/fernandovfilho/overpower-api/issues"
  },
  "homepage": "https://github.com/fernandovfilho/overpower-api#readme",
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint:fix && npm run lint"
    }
  },
  "devDependencies": {
    "@types/cors": "2.8.12",
    "@types/express": "4.17.13",
    "@types/jest": "^27.5.0",
    "@types/node": "^17.0.31",
    "@types/uuid": "^8.3.4",
    "@types/uuidv4": "5.0.0",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^4.2.3",
    "jest": "^28.1.0",
    "prettier": "^2.6.2",
    "ts-jest": "^28.0.2",
    "ts-node-dev": "^1.1.8",
    "typescript": "4.6.4"
  },
  "dependencies": {
    "cors": "2.8.5",
    "express": "4.18.1",
    "uuid": "^8.3.2"
  }
}
